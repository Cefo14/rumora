{
  "branches": ["master"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true,
        "access": "public"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "*.tgz",
            "label": "Package tarball"
          }
        ],
        "successComment": "ðŸŽ‰ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version}\n\n**NPM Package:** [`rumora@${nextRelease.version}`](https://www.npmjs.com/package/rumora/v/${nextRelease.version})\n\n**Installation:** `npm install rumora@latest`"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json", "pnpm-lock.yaml"],
        "message": "chore(release): ${nextRelease.version} [skip ci]"
      }
    ]
  ]
}
