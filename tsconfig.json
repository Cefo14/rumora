{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "esnext",
    /* Emit */
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    /* Type Checking */
    "strict": true,
    "noImplicitOverride": true,
    /* Modules */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    /* Interop Constraints */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    /* Decorators */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    /* Advanced */
    "erasableSyntaxOnly": true
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.mts",
    "vite.config.ts",
    "vitest.config.ts",
    "vitest.setup.ts",
  ]
}